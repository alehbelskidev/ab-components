{
	"name": "ab-components",
	"private": true,
	"version": "0.0.1",
	"description": "Shadcn powered functional components",
	"type": "module",
	"license": "MIT",
	"homepage": "https://github.com/alehbelskidev/ab-components#readme",
	"bugs": {
		"url": "https://github.com/alehbelskidev/ab-components/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/alehbelskidev/ab-components.git"
	},
	"author": "Aleh Belski <aleh.belski@absoftware.dev>",
	"workspaces": [
		"packages/*",
		"playground"
	],
	"scripts": {
		"dev": "vite --config ./playground/vite.config.ts",
		"play": "pnpm dev",
		"sync": "node scripts/sync.js",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"type-check": "tsc -p packages/components/tsconfig.json --noEmit --skipLibCheck",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.10.1",
		"husky": "^9.1.7",
		"typescript": "^5.9.3",
		"vite": "^7.2.4"
	}
}
